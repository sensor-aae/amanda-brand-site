---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: 'Market & Credit Risk Model',
    summary: 'Hybrid VaR/ES engine (Monte Carlo + parametric) with stress tests and PD/LGD overlays.',
    tags: ['Python', 'VaR/ES', 'Risk'],
    link: 'https://github.com/sensor-aae/your-risk-model'
  },
  {
    title: 'Option Pricing & Greeks',
    summary: 'Black–Scholes pricer plus sensitivity analysis, plots, and a small API.',
    tags: ['Python', 'Black–Scholes', 'Finance'],
    link: 'https://github.com/sensor-aae/your-options-project'
  },
  {
    title: 'Beats x Speaker Insights',
    summary: 'Survey + review mining with dashboards; go‑to‑market and pricing signals.',
    tags: ['Analytics', 'EDA', 'Reporting'],
    link: 'https://github.com/sensor-aae/your-beats-project'
  }
];
---
<Base>
  <Header />

  <section class="hero reveal">
    <h1>Hi, I’m <span style="background:linear-gradient(135deg,var(--accent),var(--accent-2));-webkit-background-clip:text;background-clip:text;color:transparent;">Amanda</span> — I build quantitative models for finance & risk.</h1>
    <p class="lead">Applied Mathematics @ York University · Quant/Risk Analytics · Data‑driven decision making.</p>
    <div class="cta">
      <a class="primary" href="#projects">See Projects</a>
      <a class="secondary" href="#contact">Contact</a>
    </div>
  </section>

  <section id="about" class="reveal">
    <h2>About</h2>
    <p class="lead">I’m a Financial Mathematics student specializing in quantitative modeling, risk analytics, and data science. I enjoy turning messy data into clear signals — and building tools that make decisions faster and safer.</p>
  </section>

  <section id="projects" class="reveal">
    <h2>Projects</h2>
    <div class="grid">
      {projects.map(p => <ProjectCard {...p} />)}
    </div>
  </section>

  <section id="contact" class="reveal">
    <h2>Contact</h2>
    <p class="lead">Let’s connect on opportunities, collaborations, or feedback.</p>
    <div class="cta">
      <a class="secondary" href="mailto:YOUR_EMAIL@example.com">Email</a>
      <a class="secondary" href="https://www.linkedin.com/in/amanda-a-602328284/" target="_blank">LinkedIn</a>
      <a class="secondary" href="https://github.com/sensor-aae" target="_blank">GitHub</a>
    </div>
  </section>

  <footer class="reveal">
    © {new Date().getFullYear()} Amanda O. · Built with Astro · Light/Dark · Finance/Tech aesthetics
  </footer>
</Base>